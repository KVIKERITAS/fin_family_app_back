generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  username String   @unique
  hash     String
  // Suitcase Suitcase

  @@map("users")
}

